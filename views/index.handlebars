

  <h1>Burger</h1>

<h2>Eat a Burger</h2>
<div class="container">
<ul>
  {{#each burgers}}
    {{#unless this.devour}}
     <li>
	{{this.burger_name}}

	<button class="change-devour" value={{this.id}} data-newburger="{{burger}}">
		{{#if this.burger_name}}Burger{{else}}Devour{{/if}}
	</button>

</li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Eat It</h2>

<ul>
  {{#each burgers}}
    {{#if this.devour}}
     <li>
	{{this.burger_name}}


</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="newburger">Burger Name:</label>
    <input type="text" id="newburger" name="name">
  </div>

  <div class="form-group">
    <label for="devour">Devoured</label><br>
    <input type="radio" name="devour" value="1" checked> Devour!<br>
    <input type="radio" name="devour" value="0"> Add Burger
  </div>

  <button type="submit">Add Burger</button>
</form>

